{
    "name": "stellarwp/plugin-starter",
    "description": "A starter kit for building new plugins on the StellarWP Plugin Framework",
    "type": "wordpress-muplugin",
    "license": "MIT",
    "authors": [
        {
            "name": "StellarWP",
            "homepage": "https://stellarwp.com"
        }
    ],
    "support": {
        "issues": "https://github.com/stellarwp/plugin-starter/issues",
        "source": "https://github.com/stellarwp/plugin-starter"
    },
    "version": "1.0.0",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:stellarwp/plugin-framework.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "StellarWP\\PluginStarter\\": "plugin-starter/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6 | ^7.0 | ^8.0",
        "stellarwp/plugin-framework": "^1.0"
    },
    "require-dev": {
        "assertwell/wp-core-test-framework": "^0.2",
        "mockery/mockery": "^1.3",
        "php-stubs/wordpress-tests-stubs": "^5.8",
        "stellarwp/coding-standards": "^1.0",
        "szepeviktor/phpstan-wordpress": "^1.0",
        "wp-cli/wp-cli": "^2.6",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "scripts": {
        "build": [
            "bin/build"
        ],
        "make:bootstrap": [
            "bin/make-bootstrap"
        ],
        "test": [
            "@test:all"
        ],
        "test:all": [
            "@test:unit",
            "@test:standards",
            "@test:analysis"
        ],
        "test:analysis": [
            "phpstan analyse -c phpstan.neon.dist --memory-limit=512M"
        ],
        "test:coverage": [
            "phpdbg -qrr -d memory_limit=-1 ./plugin-starter/vendor/bin/phpunit --coverage-html=tests/coverage --coverage-text --colors=always"
        ],
        "test:standards": [
            "phpcs --cache",
            "php-cs-fixer fix --config=plugin-starter/vendor/stellarwp/coding-standards/src/php-cs-fixer.php -v --diff --dry-run"
        ],
        "test:unit": [
            "phpunit --testdox --colors=always"
        ]
    },
    "scripts-descriptions": {
        "build": "Build a release-ready archive of the plugin.",
        "make:bootstrap": "Generate a stellarwp-bootstrap.php file adjacent to the project directory.",
        "test:all": "Run all automated tests.",
        "test:analysis": "Perform static code analysis.",
        "test:coverage": "Generate code coverage reports.",
        "test:standards": "Check coding standards.",
        "test:unit": "Run all of the PHPUnit test suites."
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "vendor-dir": "plugin-starter/vendor",
        "bin-dir": "plugin-starter/vendor/bin",
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "installer-disable": true
    }
}
